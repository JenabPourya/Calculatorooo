<Calculator>:
    orientation: 'vertical'
    padding: 20
    spacing: 10

    BoxLayout:
        size_hint_y: None
        height: '40dp'
        Spinner:
            text: root.translate("language")
            values: ['فارسی', 'العربية', 'English', 'Русский', 'Italiano', '中文', '日本語', '한국어', 'Español', 'Deutsch']
            on_text: root.change_language({'فارسی':'fa','العربية':'ar','English':'en','Русский':'ru','Italiano':'it','中文':'zh','日本語':'ja','한국어':'ko','Español':'es','Deutsch':'German'}[self.text])
        Spinner:
            text: root.translate("theme")
            values: [root.translate("light"), root.translate("dark"), root.translate("system")]
            on_text: root.change_theme({'روشن':'light','تاریک':'dark','مطابق':'system','Light':'light','Dark':'dark','System':'system'}[self.text])

    TextInput:
        id: input
        multiline: False
        font_size: 32
        on_text: root.on_input_change(self.text)

    Label:
        text: root.result_preview
        font_size: 24
        color: (0.5, 0.5, 0.5, 1)

    Button:
        text: "="
        font_size: 32
        on_press: root.calculate()
        
    Button:
        text: root.translate("history")
        on_press: root.show_history()

    Label:
        id: output
        font_size: 32
        text: ""

    BoxLayout:
        orientation: 'vertical'
        size_hint_y: None
        height: '250dp'
        Label:
            text: root.translate("contact_us")
            font_size: 18
        Label:
            text: " +989210423609 |  alizadepourya@gmail.com"
            font_size: 14
        Label:
            text: " Github.com/Jenabpourya |  https://t.me/POURYA_ALIZADEH "
            font_size: 14
Button:
    text: root.translate("history")
    on_press: root.show_history()

GridLayout:
    cols: 4
    size_hint_y: None
    height: '200dp'
    Button:
        text: "sin"
        on_press: root.ids.input.text += "sin("
    Button:
        text: "cos"
        on_press: root.ids.input.text += "cos("
    Button:
        text: "tan"
        on_press: root.ids.input.text += "tan("
    Button:
        text: "log"
        on_press: root.ids.input.text += "log("
    Button:
        text: "ln"
        on_press: root.ids.input.text += "ln("
    Button:
        text: "√"
        on_press: root.ids.input.text += "sqrt("
    Button:
        text: "^"
        on_press: root.ids.input.text += "**"
    Button:
        text: "!"
        on_press: root.ids.input.text += "fact("
